{
  "info": {
    "name": "Google Drive Upload API",
    "description": "Postman collection for all endpoints in server.js",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/health",
          "host": ["{{BASE_URL}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "OAuth Authorization URL",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/auth",
          "host": ["{{BASE_URL}}"],
          "path": ["auth"]
        }
      }
    },
    {
      "name": "OAuth Callback",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/auth/callback?code=YOUR_CODE",
          "host": ["{{BASE_URL}}"],
          "path": ["auth", "callback"],
          "query": [
            { "key": "code", "value": "YOUR_CODE" }
          ]
        }
      },
      "description": "Exchange authorization code for tokens."
    },
    {
      "name": "OAuth Status",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/auth/status",
          "host": ["{{BASE_URL}}"],
          "path": ["auth", "status"]
        }
      }
    },
    {
      "name": "Upload File",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": ""
            }
          ]
        },
        "url": {
          "raw": "{{BASE_URL}}/upload",
          "host": ["{{BASE_URL}}"],
          "path": ["upload"]
        }
      },
      "description": "Upload a single file to Google Drive. Returns uploadId for progress polling."
    },
    {
      "name": "Upload Progress",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/upload/progress/:uploadId",
          "host": ["{{BASE_URL}}"],
          "path": ["upload", "progress", ":uploadId"]
        }
      },
      "description": "Poll this endpoint with the uploadId returned from /upload to get the current upload progress."
    },
    {
      "name": "Upload Multiple Files",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "files",
              "type": "file",
              "src": "",
              "description": "You can select multiple files."
            }
          ]
        },
        "url": {
          "raw": "{{BASE_URL}}/upload-multiple",
          "host": ["{{BASE_URL}}"],
          "path": ["upload-multiple"]
        }
      },
      "description": "Upload multiple files to Google Drive."
    },
    {
      "name": "List Recent Files",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/files",
          "host": ["{{BASE_URL}}"],
          "path": ["files"]
        }
      },
      "description": "List the 10 most recent files uploaded to Google Drive."
    }
  ],
  "variable": [
    {
      "key": "BASE_URL",
      "value": "http://localhost:3010"
    }
  ]
}